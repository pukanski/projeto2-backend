{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Gerenciamento de Hotel",
    "description": "API RESTful para o sistema de gerenciamento de hotel. Permite gerenciar clientes, quartos e reservas com autenticação JWT.",
    "version": "1.0.0",
    "contact": {
      "email": "teste@hotel.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8081",
      "description": "Servidor de Desenvolvimento Local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "errors": { "type": "array", "items": { "type": "object" } }
        }
      }
    }
  },
  "tags": [
    { "name": "Autenticação", "description": "Endpoints públicos para login e recuperação de senha" },
    { "name": "Clientes", "description": "Gerenciamento de hóspedes (Requer Auth)" },
    { "name": "Quartos", "description": "Gerenciamento de quartos e disponibilidade (Requer Auth)" },
    { "name": "Reservas", "description": "Criação e gestão de reservas com cálculo automático (Requer Auth)" }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Fazer Login",
        "description": "Autentica um usuário e retorna um token JWT. Único endpoint público.",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "admin@hotel.com" },
                  "senha": { "type": "string", "example": "123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Login bem-sucedido!" },
                    "token": { "type": "string", "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..." }
                  }
                }
              }
            }
          },
          "400": { "description": "Dados incompletos (email ou senha faltando)" },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/esqueciSenha": {
      "post": {
        "summary": "Solicitar Recuperação de Senha",
        "description": "Gera um token de recuperação e o exibe no console do servidor (simulação de email).",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "admin@hotel.com" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Token gerado (verifique o console)" },
          "500": { "description": "Erro interno" }
        }
      }
    },
    "/resetarSenha": {
      "post": {
        "summary": "Redefinir Senha",
        "description": "Usa o token de recuperação para definir uma nova senha.",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string", "description": "Token copiado do console" },
                  "novaSenha": { "type": "string", "example": "novaSenha123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Senha alterada com sucesso" },
          "400": { "description": "Token inválido ou expirado" }
        }
      }
    },
    "/clientes": {
      "get": {
        "summary": "Listar Clientes",
        "tags": ["Clientes"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista retornada com sucesso" },
          "401": { "description": "Não autorizado (Token inválido ou ausente)" }
        }
      },
      "post": {
        "summary": "Criar Cliente",
        "tags": ["Clientes"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string", "example": "Ana Silva" },
                  "email": { "type": "string", "example": "ana@email.com" },
                  "cpf": { "type": "string", "example": "111.222.333-44" },
                  "telefone": { "type": "string", "example": "41999999999" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Cliente criado" },
          "400": { "description": "Erro de validação (dados inválidos)" },
          "409": { "description": "Conflito (Email ou CPF já existe)" }
        }
      }
    },
    "/clientes/{id}": {
      "get": {
        "summary": "Buscar Cliente por ID",
        "tags": ["Clientes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Cliente encontrado" },
          "404": { "description": "Cliente não encontrado" }
        }
      },
      "put": {
        "summary": "Atualizar Cliente",
        "tags": ["Clientes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string" },
                  "email": { "type": "string" },
                  "cpf": { "type": "string" },
                  "telefone": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Cliente atualizado" },
          "404": { "description": "Cliente não encontrado" },
          "409": { "description": "Conflito de dados únicos" }
        }
      },
      "delete": {
        "summary": "Deletar Cliente",
        "description": "Remove um cliente. Falha se o cliente tiver reservas ativas (Integridade Referencial).",
        "tags": ["Clientes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Deletado com sucesso (Sem conteúdo)" },
          "404": { "description": "Cliente não encontrado" },
          "409": { "description": "Conflito: Cliente possui reservas e não pode ser deletado" }
        }
      }
    },
    "/quartos": {
      "get": {
        "summary": "Listar Quartos",
        "tags": ["Quartos"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista retornada com sucesso" }
        }
      },
      "post": {
        "summary": "Criar Quarto",
        "tags": ["Quartos"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "numero": { "type": "string", "example": "101" },
                  "tipo": { "type": "string", "enum": ["Standard", "Deluxe", "Suíte"] },
                  "preco_diaria": { "type": "number", "format": "float", "example": 150.00 },
                  "status": { "type": "string", "enum": ["Disponivel", "Ocupado", "Manutencao"] }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Quarto criado" },
          "400": { "description": "Erro de validação" },
          "409": { "description": "Conflito: Número do quarto já existe" }
        }
      }
    },
    "/quartos/{id}": {
      "get": {
        "summary": "Buscar Quarto por ID",
        "tags": ["Quartos"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Quarto encontrado" },
          "404": { "description": "Quarto não encontrado" }
        }
      },
      "put": {
        "summary": "Atualizar Quarto",
        "tags": ["Quartos"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "numero": { "type": "string" },
                  "tipo": { "type": "string", "enum": ["Standard", "Deluxe", "Suíte"] },
                  "preco_diaria": { "type": "number" },
                  "status": { "type": "string", "enum": ["Disponivel", "Ocupado", "Manutencao"] }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Quarto atualizado" },
          "404": { "description": "Quarto não encontrado" }
        }
      },
      "delete": {
        "summary": "Deletar Quarto",
        "tags": ["Quartos"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Deletado com sucesso" },
          "409": { "description": "Conflito: Quarto possui reservas" }
        }
      }
    },
    "/reservas": {
      "get": {
        "summary": "Listar Reservas",
        "description": "Retorna todas as reservas, incluindo os dados aninhados do Cliente e do Quarto (JOIN).",
        "tags": ["Reservas"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista retornada com sucesso" }
        }
      },
      "post": {
        "summary": "Criar Reserva",
        "description": "Cria uma reserva e calcula automaticamente o valor total. Valida disponibilidade de status, conflito de datas e datas passadas.",
        "tags": ["Reservas"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cliente_id": { "type": "integer", "example": 1 },
                  "quarto_id": { "type": "integer", "example": 1 },
                  "data_checkin": { "type": "string", "format": "date", "example": "2025-12-01" },
                  "data_checkout": { "type": "string", "format": "date", "example": "2025-12-05" },
                  "status": { "type": "string", "example": "Confirmada" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { 
            "description": "Reserva criada e valor calculado",
            "content": {
              "application/json": {
                "schema": {
                   "type": "object",
                   "properties": {
                      "id": { "type": "integer" },
                      "valor_total": { "type": "number", "description": "Valor calculado pelo sistema" }
                   }
                }
              }
            }
          },
          "400": { "description": "Erro de validação (Datas inválidas, Datas passadas)" },
          "404": { "description": "Cliente ou Quarto não encontrado" },
          "409": { "description": "Conflito: Quarto indisponível ou já reservado para as datas" }
        }
      }
    },
    "/reservas/{id}": {
      "get": {
        "summary": "Buscar Reserva por ID",
        "tags": ["Reservas"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Reserva encontrada" },
          "404": { "description": "Reserva não encontrada" }
        }
      },
      "put": {
        "summary": "Atualizar Reserva",
        "description": "Atualiza dados da reserva e RECALCULA o valor total. Valida novos conflitos de data.",
        "tags": ["Reservas"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "quarto_id": { "type": "integer" },
                  "data_checkin": { "type": "string", "format": "date" },
                  "data_checkout": { "type": "string", "format": "date" },
                  "status": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Reserva atualizada e valor recalculado" },
          "409": { "description": "Conflito de datas ou quarto indisponível" }
        }
      },
      "delete": {
        "summary": "Deletar Reserva",
        "description": "Remove a reserva e libera a disponibilidade do quarto para as datas.",
        "tags": ["Reservas"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Deletado com sucesso" },
          "404": { "description": "Reserva não encontrada" }
        }
      }
    }
  }
}